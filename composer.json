{
	"name": "some-like-it-neat",
	"description": "A simple yet advanced WordPress Starter Theme built using _S, Bourbon and Neat.",
	"type": "wordpress-theme",
	"license": "GPL",
	"require": {
		"wpmetabox/meta-box": "4.*",
		"mnsami/composer-custom-directory-installer": "1.1.*"
	},
	"extra":{
		"installer-paths":{
		  "./library/vendors/wpmetabox": ["wpmetabox/meta-box"]
		}
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "2.*",
		"wp-coding-standards/wpcs": "*"
	},
	"scripts": {
		"post-install-cmd": [
			"./vendor/bin/phpcs --config-set bin ./vendor/bin/phpcs",
			"./vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
		]
	}
}
